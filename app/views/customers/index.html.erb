<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
  <div class="panel-heading"><h2>Lista de Alunos</h2></div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome Completo</th>
          <th>Registro Geral</th>
          <th>Turma</th>
          <th>Observações</th>
          <th colspan="3">Funções</th>
        </tr>
      </thead>
    
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.nome %></td>
            <td><%= customer.rg %></td>
            <td><%= customer.turma %></td>
            <td><%= customer.obs %></td>
            <td><%= link_to 'Detalhes', customer %></td>
            <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
            <td><%= link_to 'Apagar', customer, method: :delete, data: { confirm: 'Deseja apagar o registro do aluno #{customer.nome}?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>

<br>
<%= link_to '<button type="button" class="btn btn-primary"><i class="fa fa-user"></i> Novo Cadastro</button>'.html_safe, new_customer_path %>
