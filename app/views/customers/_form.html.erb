<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form_size">
  <div class="form-group">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rg %><br>
    <%= f.text_field :rg, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :turma %><br>
    <%= f.text_field :turma, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :obs %><br>
    <%= f.text_area :obs, :class => 'form-control' %>
  </div>
  <div class="actions">
    <div class="btn-group btn-group-xs" role="group" aria-label="...">
      <div class="btn-group" role="group">
        <%= f.submit 'Cadastrar', :class => 'btn btn-primary' %> 
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-primary" onclick="window.location.href='<%= root_path %>'"> Voltar</button>
      </div>
    </div>
  </div>
</div>
<% end %>
